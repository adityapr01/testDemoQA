			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Assertion Status Code\r",
							"pm.test(\"TC-P01: Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Assertion Response Body (Name check)\r",
							"pm.test(\"TC-P01: Response Pet Name is correct\", function () {\r",
							"    pm.expect(pm.response.json().name).to.eql(\"ChainDoge\");\r",
							"});\r",
							"\r",
							"// Simpan ID dari response ke environment variable\r",
							"var responseData = pm.response.json();\r",
							"pm.environment.set(\"newPetId\", responseData.id);\r",
							"console.log(\"Pet ID baru: \" + responseData.id); // Periksa nilai di Postman Console"
						],
